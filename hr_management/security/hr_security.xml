<!-- /hr_management/security/hr_security.xml -->
<odoo>
    <data>
        <record id="module_category_hrm" model="ir.module.category">
            <field name="name">HR Management</field>
        </record>
        <record id="module_category_hr_management" model="ir.module.category">
            <field name="name">Management</field>
            <field name="parent_id" ref="hr_management.module_category_hrm"/>
        </record>
        <record id="group_hr_management_user" model="res.groups">
            <field name="name">User</field>
            <field name="category_id" ref="module_category_hr_management"/>
            <field name="implied_ids" eval="[(4, ref('base.group_user'))]"/>
        </record>
        <record id="group_hr_management_manager" model="res.groups">
            <field name="name">Manager</field>
            <field name="category_id" ref="module_category_hr_management"/>
            <field name="implied_ids" eval="[(4, ref('group_hr_management_user'))]"/>
            <field name="users" eval="[(4, ref('base.user_root')), (4, ref('base.user_admin'))]"/>
        </record>

        <record id="hr_access_request_manager_rule" model="ir.rule">
            <field name="name">Access Request: Manager can access all</field>
            <field name="model_id" ref="model_hr_access_request"/>
            <field name="groups" eval="[(4, ref('group_hr_management_manager'))]"/>
            <field name="domain_force">[(1, '=', 1)]</field>
        </record>
        <record id="hr_access_request_user_self_rule" model="ir.rule">
            <field name="name">Access Request: User can only access own requests</field>
            <field name="model_id" ref="model_hr_access_request"/>
            <field name="groups" eval="[(4, ref('group_hr_management_user'))]"/>
            <field name="domain_force">[('user_id', '=', user.id)]</field>
        </record>
    </data>
</odoo>