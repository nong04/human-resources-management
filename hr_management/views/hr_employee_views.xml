<!-- /hr_management/views/hr_employee_views.xml -->
<odoo>
    <data>
        <record id="hr_employee_view_form" model="ir.ui.view">
            <field name="name">hr.employee.form</field>
            <field name="model">hr.employee</field>
            <field name="arch" type="xml">
                <form edit="can_edit">
                    <sheet>
                        <field name="can_edit" invisible="1"/>
                        <field name="company_id" invisible="1"/>
                        <div name="button_box" class="oe_button_box">
                            <button name="action_related_user"
                                    type="object"
                                    class="oe_stat_button"
                                    icon="fa-user"
                                    invisible="not can_edit"
                                    help="Open the user form for this employee">
                                <span class="o_stat_text">Related User</span>
                            </button>
                        </div>
                        <field name="image_1920" widget="image" class="oe_avatar" options='{"zoom": true}'/>
                        <div class="oe_title">
                            <h1><field name="name" placeholder="Employee's Name" readonly="not can_edit"/></h1>
                            <h2><field name="job_id" placeholder="Job Position" readonly="not can_edit"/></h2>
                        </div>
                        <group>
                            <group>
                                <field name="work_email" readonly="not can_edit"/>
                                <field name="work_phone" readonly="not can_edit"/>
                                <field name="work_mobile" readonly="not can_edit"/>
                            </group>
                            <group>
                                <field name="department_id" readonly="not can_edit"/>
                                <field name="manager_id" widget="many2one_avatar_user" readonly="not can_edit"/>
                                <field name="coach_id" widget="many2one_avatar_user" readonly="not can_edit"/>
                            </group>
                        </group>
                        <notebook>
                            <page name="work_info" string="Work Information">
                                <group>
                                    <group string="Location">
                                        <field name="work_location" readonly="not can_edit"/>
                                    </group>
                                    <group string="Approvers">
                                        <field name="leave_manager_id" widget="many2one_avatar_user" readonly="not can_edit"/>
                                    </group>
                                    <group string="Schedule">
                                        <field name="resource_calendar_id" groups="hr_management.group_hr_management_manager"/>
                                        <field name="work_start_date" readonly="not can_edit"/>
                                        <field name="work_end_date" readonly="not can_edit"/>
                                        <field name="tz" readonly="not can_edit"/>
                                    </group>
                                </group>
                            </page>
                            <page name="private_info" string="Private Information" invisible="not can_edit">
                                <group>
                                    <group string="Private Contact">
                                        <field name="private_address"/>
                                        <field name="email"/>
                                        <field name="phone"/>
                                        <field name="language"/>
                                    </group>
                                    <group string="Private Details">
                                        <field name="birthday"/>
                                        <field name="gender"/>
                                        <field name="nationality"/>
                                        <field name="identification_id"/>
                                        <field name="passport_id"/>
                                    </group>
                                    <group string="Education">
                                        <field name="certificate"/>
                                        <field name="study_field"/>
                                        <field name="study_school"/>
                                    </group>
                                </group>
                            </page>
                            <page name="hr_settings" string="HR Settings" groups="hr_management.group_hr_management_manager">
                                <group>
                                    <group string="Status">
                                        <field name="employee_type"/>
                                        <field name="work_status"/>
                                    </group>
                                    <group string="Access">
                                        <field name="user_id" widget="many2one_avatar_user"/>
                                        <field name="access_level"/>
                                    </group>
                                </group>
                            </page>
                        </notebook>
                    </sheet>
                    <div class="oe_chatter" invisible="not can_edit">
                        <field name="message_follower_ids"/>
                        <field name="activity_ids"/>
                        <field name="message_ids"/>
                    </div>
                </form>
            </field>
        </record>

        <record id="hr_employee_view_tree" model="ir.ui.view">
            <field name="name">hr.employee.tree</field>
            <field name="model">hr.employee</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="name"/>
                    <field name="job_id"/>
                    <field name="department_id"/>
                    <field name="work_email"/>
                    <field name="work_phone"/>
                </tree>
            </field>
        </record>

        <record id="hr_employee_view_kanban" model="ir.ui.view">
            <field name="name">hr.employee.kanban</field>
            <field name="model">hr.employee</field>
            <field name="arch" type="xml">
                <kanban>
                    <field name="id"/>
                    <field name="image_1920"/>
                    <field name="name"/>
                    <field name="job_id"/>
                    <field name="work_email"/>
                    <templates>
                        <t t-name="kanban-box">
                            <div class="oe_kanban_global_click">
                                <div class="o_kanban_image">
                                    <img t-att-src="kanban_image('hr.employee', 'image_1920', record.id.raw_value)" alt="Employee"/>
                                </div>
                                <div class="oe_kanban_details">
                                    <strong class="o_kanban_record_title">
                                        <field name="name"/>
                                    </strong>
                                    <div t-if="record.job_id.value">
                                        <field name="job_id"/>
                                    </div>
                                    <div t-if="record.work_email.value">
                                        <field name="work_email"/>
                                    </div>
                                </div>
                            </div>
                        </t>
                    </templates>
                </kanban>
            </field>
        </record>

        <record id="hr_employee_view_search" model="ir.ui.view">
            <field name="name">hr.employee.search</field>
            <field name="model">hr.employee</field>
            <field name="arch" type="xml">
                <search string="Employees">
                    <field name="name" string="Employee"/>
                    <field name="department_id"/>
                    <field name="job_id"/>
                    <separator/>
                    <filter string="Active" name="active" domain="[('work_status', '=', 'active')]"/>
                    <group expand="0" string="Group By">
                        <filter string="Department" name="group_department" context="{'group_by': 'department_id'}"/>
                        <filter string="Job Position" name="group_job" context="{'group_by': 'job_id'}"/>
                    </group>
                    <searchpanel>
                        <field name="department_id" icon="fa-users" enable_counters="1"/>
                    </searchpanel>
                </search>
            </field>
        </record>

        <record id="hr_employee_action" model="ir.actions.act_window">
            <field name="name">Employees</field>
            <field name="res_model">hr.employee</field>
            <field name="view_mode">kanban,tree,form</field>
            <field name="search_view_id" ref="hr_employee_view_search"/>
        </record>
    </data>
</odoo>