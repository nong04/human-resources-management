<!-- /hr_management/views/hr_department_views.xml -->
<odoo>
    <data>
        <record id="hr_department_view_form" model="ir.ui.view">
            <field name="name">hr.department.form</field>
            <field name="model">hr.department</field>
            <field name="arch" type="xml">
                <form>
                    <sheet>
                        <div class="oe_button_box" name="button_box">
                            <button name="action_open_employees" type="object" class="oe_stat_button" icon="fa-users">
                                <field string="Employees" name="employee_department_count" widget="statinfo"/>
                            </button>
                        </div>
                        <group>
                            <group>
                                <field name="name"/>
                                <field name="manager_id"/>
                                <field name="parent_id"/>
                            </group>
                            <group>
                                <field name="active"/>
                            </group>
                        </group>
                        <notebook>
                            <page string="Child Department Structure">
                                <field name="child_ids" readonly="1">
                                    <tree>
                                        <field name="name"/>
                                        <field name="manager_id"/>
                                        <field name="employee_department_count"/>
                                    </tree>
                                </field>
                            </page>
                        </notebook>
                    </sheet>
                    <div class="oe_chatter">
                        <field name="message_follower_ids"/>
                        <field name="message_ids"/>
                    </div>
                </form>
            </field>
        </record>
        <record id="hr_department_view_tree" model="ir.ui.view">
            <field name="name">hr.department.tree</field>
            <field name="model">hr.department</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="name"/>
                    <field name="manager_id"/>
                    <field name="employee_department_count"/>
                </tree>
            </field>
        </record>
        <record id="hr_department_action" model="ir.actions.act_window">
            <field name="name">Departments</field>
            <field name="res_model">hr.department</field>
            <field name="view_mode">tree,form</field>
        </record>
    </data>
</odoo>