<!-- /hr_leaves/views/hr_public_leaves_views.xml -->
<odoo>
    <data>
        <record id="hr_public_leaves_view_tree" model="ir.ui.view">
            <field name="name">hr.public.leaves.tree</field>
            <field name="model">hr.public.leaves</field>
            <field name="arch" type="xml">
                <tree string="Public Leaves" editable="top">
                    <field name="name"/>
                    <field name="date_from"/>
                    <field name="date_to"/>
                </tree>
            </field>
        </record>

        <record id="hr_public_leaves_action" model="ir.actions.act_window">
            <field name="name">Public Leaves</field>
            <field name="res_model">hr.public.leaves</field>
            <field name="view_mode">tree</field>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    Create a new public leave
                </p><p>
                    Define company-wide holidays here. These days will be excluded from leave duration calculations.
                </p>
            </field>
        </record>
    </data>
</odoo>