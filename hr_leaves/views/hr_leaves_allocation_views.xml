<!-- /hr_leaves/views/hr_leaves_allocation_views.xml -->
<odoo>
    <data>
        <record id="hr_leaves_allocation_view_form" model="ir.ui.view">
            <field name="name">hr.leaves.allocation.form</field>
            <field name="model">hr.leaves.allocation</field>
            <field name="arch" type="xml">
                <form>
                    <header>
                        <field name="can_approve" invisible="1"/>
                        <button name="action_confirm" string="Submit" type="object" class="oe_highlight" invisible="state != 'draft'"/>
                        <button name="action_approve" string="Approve" type="object" class="oe_highlight" invisible="state != 'confirm' or not can_approve"/>
                        <button name="action_refuse" string="Refuse" type="object" invisible="state != 'confirm' or not can_approve"/>
                        <button name="action_draft" string="Mark as Draft" type="object" invisible="state in ['draft', 'approved']"/>
                        <field name="state" widget="statusbar" statusbar_visible="draft,confirm,approved"/>
                    </header>
                    <sheet>
                        <div class="oe_title">
                            <h1><field name="name" readonly="1"/></h1>
                        </div>
                        <group>
                            <group>
                                <field name="employee_id" widget="many2one_avatar_user" readonly="state != 'draft'"/>
                                <field name="leaves_type_id" readonly="state != 'draft'"/>
                                <field name="manager_id" widget="many2one_avatar_user"/>
                                <field name="approver_id" widget="many2one_avatar_user"/>
                            </group>
                            <group>
                                <label for="duration"/>
                                <div class="o_row">
                                    <field name="duration" readonly="state != 'draft'"/>
                                    <span>Days</span>
                                </div>
                                <label for="date_from" string="Validity Period"/>
                                <div class="o_row">
                                    <field name="date_from" widget="date" readonly="state != 'draft'"/>
                                    <i class="fa fa-long-arrow-right mx-2" aria-label="Arrow icon" title="Arrow"/>
                                    <field name="date_to" widget="date" placeholder="No Limit" readonly="state != 'draft'"/>
                                </div>
                            </group>
                        </group>
                        <notebook>
                            <page string="Reason">
                                <field name="reason" placeholder="e.g. Annual allocation for new fiscal year..."/>
                            </page>
                            <page string="Response" invisible="state not in ['approved', 'refused']">
                                <field name="response" readonly="1"/>
                            </page>
                        </notebook>
                    </sheet>
                    <div class="oe_chatter">
                        <field name="message_follower_ids"/>
                        <field name="activity_ids"/>
                        <field name="message_ids"/>
                    </div>
                </form>
            </field>
        </record>

        <record id="hr_leaves_allocation_view_tree" model="ir.ui.view">
            <field name="name">hr.leaves.allocation.tree</field>
            <field name="model">hr.leaves.allocation</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="can_approve" column_invisible="1"/>
                    <field name="employee_id" widget="many2one_avatar_user"/>
                    <field name="leaves_type_id"/>
                    <field name="duration"/>
                    <field name="date_from" widget="date"/>
                    <field name="date_to" widget="date"/>
                    <field name="state" widget="badge" decoration-warning="state == 'confirm'" decoration-success="state == 'approved'" decoration-danger="state == 'refused'"/>
                    <button name="action_confirm" type="object" icon="fa-arrow-right" title="Submit" invisible="state != 'draft'"/>
                    <button name="action_approve" type="object" icon="fa-check" title="Approve" invisible="state != 'confirm' or not can_approve"/>
                    <button name="action_refuse" type="object" icon="fa-times" title="Refuse" invisible="state != 'confirm' or not can_approve"/>
                    <button name="action_draft" type="object" icon="fa-refresh" title="Mark as Draft" invisible="state in ['draft', 'approved']"/>
                </tree>
            </field>
        </record>

        <record id="hr_leaves_allocation_action" model="ir.actions.act_window">
            <field name="name">Leave Allocations</field>
            <field name="res_model">hr.leaves.allocation</field>
            <field name="view_mode">tree,form</field>
        </record>
    </data>
</odoo>