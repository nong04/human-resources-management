<!-- /hr_leaves/views/hr_leaves_request_views.xml -->
<odoo>
    <data>
        <!-- Form View for Request -->
        <record id="hr_leaves_request_view_form" model="ir.ui.view">
            <field name="name">hr.leaves.request.form</field>
            <field name="model">hr.leaves.request</field>
            <field name="arch" type="xml">
                <form edit="state in ['draft', 'confirm']">
                    <header>
                        <button name="action_submit" string="Submit" type="object" class="oe_highlight" invisible="state != 'draft'"/>
                        <button name="action_approve" string="Approve" type="object" class="oe_highlight" invisible="state != 'confirm'" groups="hr_leaves.group_hr_leaves_manager"/>
                        <button name="action_refuse" string="Refuse" type="object" invisible="state != 'confirm'" groups="hr_leaves.group_hr_leaves_manager"/>
                        <field name="state" widget="statusbar" statusbar_visible="draft,confirm,approved"/>
                    </header>
                    <sheet>
                        <group>
                            <group>
                                <field name="employee_id" widget="many2one_avatar_user" readonly="state not in ['draft']"/>
                                <field name="leaves_type_id" readonly="state not in ['draft', 'confirm']"/>
                            </group>
                            <group>
                                <field name="date_from" readonly="state not in ['draft', 'confirm']"/>
                                <field name="date_to" readonly="state not in ['draft', 'confirm']"/>
                                <field name="duration" readonly="1"/>
                            </group>
                        </group>
                        <notebook>
                            <page string="Reason">
                                <field name="notes" placeholder="e.g. Family vacation..." readonly="state not in ['draft', 'confirm']"/>
                            </page>
                        </notebook>
                    </sheet>
                    <div class="oe_chatter">
                        <field name="message_follower_ids"/>
                        <field name="activity_ids"/>
                        <field name="message_ids"/>
                    </div>
                </form>
            </field>
        </record>

        <!-- Tree View for Request -->
        <record id="hr_leaves_request_view_tree" model="ir.ui.view">
            <field name="name">hr.leaves.request.tree</field>
            <field name="model">hr.leaves.request</field>
            <field name="arch" type="xml">
                <tree edit="false">
                    <field name="employee_id" widget="many2one_avatar_user"/>
                    <field name="leaves_type_id"/>
                    <field name="date_from"/>
                    <field name="date_to"/>
                    <field name="duration"/>
                    <field name="state" widget="badge" decoration-warning="state == 'confirm'" decoration-success="state == 'approved'" decoration-danger="state == 'refuse'"/>
                </tree>
            </field>
        </record>

        <!-- Action for Request -->
        <record id="hr_leaves_request_action" model="ir.actions.act_window">
            <field name="name">Time Off Requests</field>
            <field name="res_model">hr.leaves.request</field>
            <field name="view_mode">tree,form</field>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    Create your first time off request
                </p>
            </field>
        </record>
    </data>
</odoo>