<!-- /hr_leaves/views/hr_employee_views.xml -->
<odoo>
    <data>
        <record id="hr_employee_view_form_inherit_leaves" model="ir.ui.view">
            <field name="name">hr.employee.form.inherit.leaves</field>
            <field name="model">hr.employee</field>
            <field name="inherit_id" ref="hr_management.hr_employee_view_form"/>
            <field name="arch" type="xml">
                <div name="button_box" position="inside">
                    <button name="action_open_employee_allocations" class="oe_stat_button" icon="fa-calendar" type="object" help="Remaining Allocated Leaves">
                        <div class="o_field_widget o_stat_info">
                            <span class="o_stat_value"><field name="remaining_allocated_leaves_count"/> Days</span>
                            <span class="o_stat_text">Remaining</span>
                        </div>
                    </button>
                </div>
            </field>
        </record>
    </data>
</odoo>