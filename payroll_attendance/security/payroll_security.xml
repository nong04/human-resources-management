<!-- /payroll_attendance/security/payroll_security.xml -->
<odoo>
    <data>
        <record id="module_category_payroll" model="ir.module.category">
            <field name="name">Payroll</field>
            <field name="parent_id" ref="hr_management.module_category_hrm"/>
        </record>
        <record id="group_payroll_user" model="res.groups">
            <field name="name">User</field>
            <field name="category_id" ref="module_category_payroll"/>
            <field name="implied_ids" eval="[(4, ref('hr_management.group_hr_management_user'))]"/>
        </record>
        <record id="group_payroll_manager" model="res.groups">
            <field name="name">Manager</field>
            <field name="category_id" ref="module_category_payroll"/>
            <field name="implied_ids" eval="[(4, ref('group_payroll_user'))]"/>
            <field name="users" eval="[(4, ref('base.user_root')), (4, ref('base.user_admin'))]"/>
        </record>

        <record id="attendance_record_rule_user_self" model="ir.rule">
            <field name="name">Attendance Record: User can only see their own</field>
            <field name="model_id" ref="model_payroll_attendance_record"/>
            <field name="groups" eval="[(4, ref('payroll_attendance.group_payroll_user'))]"/>
            <field name="domain_force">[('employee_id.user_id', '=', user.id)]</field>
        </record>
        <record id="attendance_record_rule_manager" model="ir.rule">
            <field name="name">Attendance Record: Manager can see all</field>
            <field name="model_id" ref="model_payroll_attendance_record"/>
            <field name="groups" eval="[(4, ref('payroll_attendance.group_payroll_manager'))]"/>
            <field name="domain_force">[(1, '=', 1)]</field>
        </record>
        <record id="payslip_rule_user_self" model="ir.rule">
            <field name="name">Payslip: User can only see their own</field>
            <field name="model_id" ref="model_payroll_payslip"/>
            <field name="groups" eval="[(4, ref('payroll_attendance.group_payroll_user'))]"/>
            <field name="domain_force">[('employee_id.user_id', '=', user.id)]</field>
        </record>
        <record id="payslip_rule_manager" model="ir.rule">
            <field name="name">Payslip: Manager can see all</field>
            <field name="model_id" ref="model_payroll_payslip"/>
            <field name="groups" eval="[(4, ref('payroll_attendance.group_payroll_manager'))]"/>
            <field name="domain_force">[(1, '=', 1)]</field>
        </record>
    </data>
</odoo>