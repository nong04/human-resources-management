<odoo>
    <record id="payroll_payslip_view_form" model="ir.ui.view">
        <field name="name">payroll.payslip.form</field>
        <field name="model">payroll.payslip</field>
        <field name="arch" type="xml">
            <form>
                <header>
                    <field name="is_manager" invisible="1"/>
                    <button name="action_compute_sheet" string="Compute Sheet" type="object" class="oe_highlight"
                            invisible="not is_manager or state != 'draft'"/>
                    <button name="action_set_to_done" string="Set to Done" type="object" class="oe_highlight"
                            invisible="not is_manager or state != 'draft'"/>
                    <button name="action_reset_to_draft" string="Reset to Draft" type="object"
                            invisible="not is_manager or state != 'done'"/>
                    <field name="state" widget="statusbar" statusbar_visible="draft,done"/>
                </header>
                <sheet>
                    <div class="oe_title">
                        <h1><field name="name" readonly="1"/></h1>
                    </div>
                    <group>
                        <group>
                            <field name="employee_id" readonly="not is_manager or state != 'draft'"/>
                            <field name="department_id"/>
                            <field name="identification_id"/>
                        </group>
                        <group>
                            <label for="date_from" string="Pay Period"/>
                            <div class="o_row">
                                <field name="date_from" readonly="not is_manager or state != 'draft'"/> -
                                <field name="date_to" readonly="not is_manager or state != 'draft'"/>
                            </div>
                            <field name="resource_calendar_id"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="Worked Hours &amp; Leaves">
                            <group>
                                <group string="Hours Summary">
                                    <field name="standard_work_hours" widget="float_time"/>
                                    <field name="actual_worked_hours" widget="float_time"/>
                                    <field name="paid_leaves_hours" widget="float_time"/>
                                    <field name="unpaid_leaves_hours" widget="float_time"/>
                                    <field name="overtime_hours" widget="float_time"/>
                                    <field name="public_leaves_worked_hours" widget="float_time"/>
                                </group>
                                <group string="Salary Rate">
                                    <field name="currency_display_id" invisible="1"/>
                                    <field name="hourly_wage_display" widget="monetary"/>
                                </group>
                            </group>
                        </page>
                        <page string="Salary Computation">
                             <group>
                                <group string="Earnings">
                                    <field name="base_pay_display" widget="monetary"/>
                                    <field name="overtime_pay_display" widget="monetary"/>
                                    <field name="public_leaves_pay_display" widget="monetary"/>
                                    <field name="allowance_display" widget="monetary"/>
                                </group>
                                <group string="Summary">
                                    <field name="gross_salary_display" widget="monetary"/>
                                    <field name="total_bonus_display" widget="monetary"/>
                                    <field name="total_deduction_display" widget="monetary" class="oe_subtotal_footer_separator"/>
                                    <field name="net_salary_display" widget="monetary" class="oe_subtotal_footer_separator fw-bold"/>
                                </group>
                            </group>
                        </page>
                        <page string="Bonuses &amp; Deductions">
                            <div class="alert alert-info" role="alert">
                                <strong>Note:</strong> Rules are computed in order of their sequence. Percentage-based rules are calculated on the running total (Gross Salary + previously calculated bonuses).
                            </div>
                            <field name="line_ids" readonly="not is_manager or state != 'draft'">
                                <tree editable="bottom">
                                    <field name="sequence" readonly="1"/>
                                    <field name="rule_id"/>
                                    <field name="quantity"/>
                                    <field name="currency_display_id" column_invisible="1"/>
                                    <field name="amount_display" widget="monetary" sum="Total"/>
                                </tree>
                            </field>
                        </page>
                    </notebook>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids"/>
                    <field name="activity_ids"/>
                    <field name="message_ids"/>
                </div>
            </form>
        </field>
    </record>

    <record id="payroll_payslip_view_tree" model="ir.ui.view">
        <field name="name">payroll.payslip.tree</field>
        <field name="model">payroll.payslip</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>
                <field name="employee_id"/>
                <field name="department_id" optional="show"/>
                <field name="date_from"/>
                <field name="date_to"/>
                <field name="currency_id" column_invisible="1"/>
                <field name="net_salary_display"/>
                <field name="state" widget="badge" decoration-info="state == 'draft'" decoration-success="state == 'done'"/>
            </tree>
        </field>
    </record>
    <record id="payroll_payslip_view_search" model="ir.ui.view">
        <field name="name">payroll.payslip.search</field>
        <field name="model">payroll.payslip</field>
        <field name="arch" type="xml">
            <search>
                <field name="employee_id"/>
                <field name="department_id"/>
                <field name="resource_calendar_id"/>
                <separator/>
                <filter string="My Payslips" name="my_payslips"
                        domain="[('employee_id.user_id', '=', uid)]"/>
                <separator/>
                <filter string="Draft" name="filter_draft" domain="[('state', '=', 'draft')]"/>
                <filter string="Done" name="filter_done" domain="[('state', '=', 'done')]"/>
                <separator/>
                <filter string="This Month" name="filter_this_month"
                        domain="[('date_to', '&gt;=', context_today().strftime('%Y-%m-01'))]"/>
                <group expand="0" string="Group By">
                    <filter string="Department" name="group_by_department" context="{'group_by': 'department_id'}"/>
                    <filter string="Working Schedule" name="group_by_calendar" context="{'group_by': 'resource_calendar_id'}"/>
                    <filter string="Status" name="group_by_state" context="{'group_by': 'state'}"/>
                    <separator/>
                    <filter string="Pay Period (Month)" name="group_by_period" context="{'group_by': 'date_to:month'}"/>
                </group>
            </search>
        </field>
    </record>
    <record id="payroll_payslip_action" model="ir.actions.act_window">
        <field name="name">Payslips</field>
        <field name="res_model">payroll.payslip</field>
        <field name="view_mode">tree,form</field>
        <field name="search_view_id" ref="payroll_payslip_view_search"/>
    </record>
</odoo>