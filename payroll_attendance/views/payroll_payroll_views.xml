<!-- /payroll_attendance/views/payroll_payroll_views.xml -->
<odoo>
        <record id="payroll_payroll_view_form" model="ir.ui.view">
        <field name="name">payroll.payroll.form</field>
        <field name="model">payroll.payroll</field>
        <field name="arch" type="xml">
            <form>
                <header>
                    <button name="action_generate_payslips" string="Generate Payslips" type="object" class="oe_highlight" invisible="state != 'draft'"/>
                    <button name="action_compute_all_sheets" string="Compute All" type="object" class="oe_highlight" invisible="state != 'generated'"/>
                    <button name="action_confirm_all" string="Confirm All" type="object" class="oe_highlight" invisible="state != 'generated'"/>
                    <button name="action_export_excel" string="Export Excel" type="object" invisible="state != 'done'"/>
                    <button name="action_reset_to_draft" string="Reset to Draft" type="object" invisible="state != 'done'"/>
                    <field name="state" widget="statusbar" statusbar_visible="draft,generated,done"/>
                </header>
                <sheet>
                    <div class="oe_button_box" name="button_box">
                        <button name="action_view_payslips" class="oe_stat_button" type="object" icon="fa-file-text-o">
                            <field name="payslip_count" widget="statinfo" string="Payslips"/>
                        </button>
                    </div>
                    <div class="oe_title">
                        <h1><field name="name" placeholder="e.g. Salary for August 2025" readonly="state != 'draft'"/></h1>
                    </div>
                    <group>
                        <group>
                            <label for="date_from" string="Period"/>
                            <div class="o_row">
                                <field name="date_from" readonly="state != 'draft'" placeholder="Start Date"/>
                                <i class="fa fa-long-arrow-right mx-2" aria-label="Arrow icon" title="Arrow"/>
                                <field name="date_to" readonly="state != 'draft'" placeholder="End Date"/>
                            </div>
                        </group>
                        <group>
                            <field name="selection_mode" widget="radio" options="{'horizontal': true}" readonly="state != 'draft'"/>
                            <field name="create_uid" string="Created By" readonly="1"/>
                            <field name="create_date" string="Created On" readonly="1"/>
                        </group>
                    </group>
                    <group invisible="selection_mode != 'department'">
                        <field name="department_ids" widget="many2many_tags" options="{'no_create': True, 'no_create_edit': True}"
                               placeholder="Select Departments..." readonly="state != 'draft'"/>
                    </group>
                    <notebook>
                        <page string="Selection Details" invisible="selection_mode != 'employee'">
                            <field name="employee_ids" widget="many2many" options="{'no_create': True, 'no_create_edit': True}"
                                   readonly="state != 'draft'">
                                <tree>
                                    <field name="name"/>
                                    <field name="department_id"/>
                                    <field name="job_id"/>
                                </tree>
                            </field>
                        </page>
                        <page string="Bonuses &amp; Deductions">
                            <field name="line_ids" readonly="state != 'draft'">
                                <tree editable="bottom">
                                    <field name="rule_id"/>
                                    <field name="quantity"/>
                                </tree>
                            </field>
                            <div class="text-muted" invisible="state != 'draft'">
                                These rules will be used as a template to create initial lines on all generated payslips.
                                Once generated, the lines on individual payslips are independent.
                            </div>
                        </page>
                        <page string="Payslips">
                            <field name="slip_ids" readonly="1">
                                <tree>
                                    <field name="name"/>
                                    <field name="employee_id"/>
                                    <field name="currency_id" column_invisible="1"/>
                                    <field name="net_salary_display"/>
                                    <field name="state" widget="badge" decoration-info="state == 'draft'" decoration-success="state == 'done'"/>
                                </tree>
                            </field>
                        </page>
                    </notebook>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids"/>
                    <field name="activity_ids"/>
                    <field name="message_ids"/>
                </div>
            </form>
        </field>
    </record>

    <record id="payroll_payroll_view_tree" model="ir.ui.view">
        <field name="name">payroll.payroll.tree</field>
        <field name="model">payroll.payroll</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>
                <field name="date_from"/>
                <field name="date_to"/>
                <field name="payslip_count"/>
                <field name="state" widget="badge" decoration-info="state in ['draft', 'generated']" decoration-success="state == 'done'"/>
            </tree>
        </field>
    </record>

    <record id="payroll_payroll_action" model="ir.actions.act_window">
        <field name="name">Payrolls</field>
        <field name="res_model">payroll.payroll</field>
        <field name="view_mode">tree,form</field>
    </record>
</odoo>