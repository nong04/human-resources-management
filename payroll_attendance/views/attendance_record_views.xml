<odoo>
    <record id="attendance_record_view_tree" model="ir.ui.view">
        <field name="name">payroll.attendance.record.tree</field>
        <field name="model">payroll.attendance.record</field>
        <field name="arch" type="xml">
            <tree editable="bottom">
                <field name="employee_id"/>
                <field name="check_in"/>
                <field name="check_out"/>
                <field name="worked_hours" widget="float_time"/>
            </tree>
        </field>
    </record>

    <record id="attendance_record_view_search" model="ir.ui.view">
        <field name="name">payroll.attendance.record.search</field>
        <field name="model">payroll.attendance.record</field>
        <field name="arch" type="xml">
            <search>
                <field name="employee_id"/>
                <separator/>
                <filter string="My Attendances" name="my_attendances"
                        domain="[('employee_id.user_id', '=', uid)]"/>
                <filter string="Still at Work" name="still_at_work"
                        domain="[('check_out', '=', False)]"/>
                <separator/>
                <filter string="This Month" name="filter_this_month"
                        domain="[('check_in', '&gt;=', context_today().strftime('%Y-%m-01'))]"/>
                <filter string="Today" name="filter_today"
                        domain="[
                            ('check_in', '&gt;=', context_today().strftime('%Y-%m-%d 00:00:00')),
                            ('check_in', '&lt;=', context_today().strftime('%Y-%m-%d 23:59:59'))
                        ]"/>
                <group expand="0" string="Group By">
                    <filter string="Employee" name="group_by_employee" context="{'group_by': 'employee_id'}"/>
                    <separator/>
                    <filter string="Check-in Day" name="group_by_day" context="{'group_by': 'check_in:day'}"/>
                    <filter string="Check-in Month" name="group_by_month" context="{'group_by': 'check_in:month'}"/>
                </group>
            </search>
        </field>
    </record>

    <record id="attendance_record_action" model="ir.actions.act_window">
        <field name="name">Attendance Records</field>
        <field name="res_model">payroll.attendance.record</field>
        <field name="view_mode">tree,form</field>
        <field name="search_view_id" ref="attendance_record_view_search"/>
        <field name="context">{'search_default_group_by_employee': 1}</field>
    </record>
</odoo>